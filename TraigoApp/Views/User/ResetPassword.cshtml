
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head lang="en">
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <title>Recuperar compraseña - USA Group</title>
    <link href="~/Content/Img/Index/favicon-32x32.png" rel="icon" type="image/png">
    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
    <link rel="stylesheet" href="~/Content/TraigoTemplate/css/separate/pages/login.min.css">
    <link rel="stylesheet" href="~/Content/TraigoTemplate/css/lib/font-awesome/font-awesome.min.css">
    <link rel="stylesheet" href="~/Content/TraigoTemplate/css/lib/bootstrap/bootstrap.min.css">
    <link rel="stylesheet" href="~/Content/TraigoTemplate/css/main.css">
    <link rel="stylesheet" href="~/Content/TraigoTemplate/css/Comun.css">
</head>
<body>
    <div class="page-center">
        <div class="page-center-in">
            <div class="container-fluid">
                <div class="sign-box reset-password-box">
                    <header class="sign-title">Recuperar contraseña</header>
                    <div class="form-group">
                        <input type="text" class="form-control" id="correorecuperar" placeholder="E-Mail" />
                    </div>
                    <button class="btn btn-rounded" id="reinicio">Recuperar</button>
                    or <a href="/login">Inicar sesión</a>
                </div>
            </div>
        </div>
    </div><!--.page-center-->
    @Scripts.Render("~/bundles/traigojs")
    <script src="~/Scripts/TraigoJs/User/ResetPassword.js"></script>
    <script>
        $(function () {
            

            $('.page-center').matchHeight({
                target: $('html')
            });

            $(window).resize(function () {
                setTimeout(function () {
                    $('.page-center').matchHeight({ remove: true });
                    $('.page-center').matchHeight({
                        target: $('html')
                    });
                }, 100);
            });
        });
    </script>
</body>
</html>

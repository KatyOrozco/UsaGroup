
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head lang="en">
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <title>Sign Up - USA Group</title>
    <link href="~/Content/Img/Index/favicon-32x32.png" rel="icon" type="image/png">
    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
    <link rel="stylesheet" href="~/Content/TraigoTemplate/css/separate/pages/login.min.css">
    <link rel="stylesheet" href="~/Content/TraigoTemplate/css/lib/font-awesome/font-awesome.min.css">
    <link rel="stylesheet" href="~/Content/TraigoTemplate/css/lib/bootstrap/bootstrap.min.css">
    <link rel="stylesheet" href="~/Content/TraigoTemplate/css/main.css">
    <link rel="stylesheet" href="~/Content/TraigoTemplate/css/Comun.css">

</head>
<body>
    <div class="page-center">
        <div class="page-center-in">
            <div class="container-fluid">
                <div class="sign-box">
                    <div class="sign-avatar">
                        <img src="~/Content/Img/Index/viajar_23-2148034719.jpg" alt="">
                    </div>
                    <header class="sign-title">Regístrate</header>
                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="Nombre" id="nombreForm" />
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="E-Mail" id="emailForm" />
                    </div>
                    <div class="form-group">
                        <input type="password" class="form-control" placeholder="Contraseña nueva" id="passwordForm" />
                    </div>
                    <div class="form-group">
                        <input type="number" class="form-control" placeholder="Celular" id="celularForm" />
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="Cédula de identidad / pasaporte" id="cedulaForm" />
                    </div>
                    <div class="form-group">
                        <label class="form-label" for="inputWarning1">Ciudad</label>
                        <select class="custom-select custom-select-sm" id="ciudadForm">
                            <option selected disabled>Ciudad</option>
                            @foreach (var item in (IList<TraigoApp.Models.City>)ViewData["ciudades"])
                            {
                                @Html.Raw("<option value='" + item.Id + "'>" + item.Nombre + "</option>")
                            }

                        </select>
                    </div>
                    <button class="btn btn-rounded btn-success" id="signup">Registrarse</button>
                    <div class="form-group">
                        <div class="text-center reset">
                            <a href="/resetpassword">Recuperar contraseña</a>
                        </div>
                    </div>
                    <p class="sign-note">Ya tienes una cuenta? <a href="/login">Iniciar Sesión</a></p>
                </div>
            </div>
        </div>
    </div><!--.page-center-->
    @Scripts.Render("~/bundles/traigojs")
    <script src="~/Scripts/TraigoJs/User/signup.js?3434534"></script>

    <script>
        $(function () {
            $('.page-center').matchHeight({
                target: $('html')
            });

            $(window).resize(function () {
                setTimeout(function () {
                    $('.page-center').matchHeight({ remove: true });
                    $('.page-center').matchHeight({
                        target: $('html')
                    });
                }, 100);
            });
        });
    </script>
</body>
</html>


@{
    ViewBag.Title = "AdminComanda";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-2"></div>
            <div class="col-lg-8">
                <h2>Usuario</h2>
                <table class="table table-bordered table-hover">
                    <tbody id="datosUser">
                        <tr>
                            <td>Nombre:</td>
                            <td><span id="nombreUser"></span></td>
                        </tr>
                        <tr>
                            <td>Email:</td>
                            <td><span id="emailUser"></span></td>
                        </tr>
                        <tr>
                            <td>Celular:</td>
                            <td><span id="celularUser"></span></td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <h2>Paquete</h2>
                <table class="table table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>Item</th>
                            <th>Peso</th>
                            <th>Precio</th>
                            <th>Comisión Traigo</th>
                            <th>Comisión Viajero</th>
                            <th>Comisión Total</th>
                            <th>Acción</th>
                        </tr>
                    </thead>
                    <tbody id="tablaPreview"></tbody>
                    <tbody id="sumaTotal">
                        <tr>
                            <td colspan="3">
                                <strong>COMISIÓN TOTAL</strong>
                            </td>
                            
                            <td><strong id="valorComanda"></strong> <strong>USD</strong></td>
                            <td><a href="#" class="btn btn-success" id="solicitarPago">Solicitar pago</a></td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@Html.Action("_editCotizacion", "Admin")
@section Scripts {
    <script src="~/Scripts/TraigoJs/Admin/admincomanda.js"></script>
}


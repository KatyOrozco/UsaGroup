
@{
    ViewBag.Title = "Viajes Activos";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row" id="datosCotizaciones">
            <div class="col-lg-12" id="tablaCotizaciones">
                <h3>Viajes Activos</h3>
             
                <table class='table table-bordered table-hover'>
                    <thead>
                        <tr>
                            <th>Id Viaje</th>
                            <th>Viajero</th>
                            <th>Ida</th>
                            <th>Vuelta</th>
                            <th>Desde</th>
                            <th>Hasta</th>
                            <th>Estado</th>
                            <th>Reserva</th>
                            <th>Aerolínea</th>
                            <th>Notas</th>
                            <th>Acción</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in (IList<TraigoApp.Models.Trip>)ViewData["viajesActivos"])
                        {
                            @Html.Raw("<tr><td title='Id'>" + item.Id + "</td>")
                            @Html.Raw("<td title='Nombre'>" + item.User.Nombre + "</td>")
                            @Html.Raw("<td title='Fecha Ida'>" + item.Ida.ToString("dd/MM/yyyy") + "</td>")
                            @Html.Raw("<td title='Fecha Vuelta'>" + item.Vuelta.ToString("dd/MM/yyyy") + "</td>")
                            @Html.Raw("<td title='Paquetes Desde'>" + item.FechaDesde.ToString("dd/MM/yyyy") + "</td>")
                            @Html.Raw("<td title='Paquetes Hasta'>" + item.FechaHasta.ToString("dd/MM/yyyy") + "</td>")
                            @Html.Raw("<td title='Estado'>" + item.Status.Nombre + "</td>")
                            @Html.Raw("<td title='Reserva'>" + item.CodigoReserva + "</td>")
                            @Html.Raw("<td title='Aerolínea'>" + item.Airline.Nombre + "</td>")
                            @Html.Raw("<td title='Notas'>" + item.NotasImportantes + "</td>")
                            @Html.Raw("<td><a href='#' ViajeId='"+item.Id+"' class='btnpaquete'>Paquetes</a></tr>")
                        }
                    </tbody>
                </table>
            </div>

        </div>
    </div>
</div>


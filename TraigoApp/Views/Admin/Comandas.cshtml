@{
    ViewBag.Title = "Comandas";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="page-content">
    <div class="container-fluid">

        <div class="row">
            <div class="col-lg-12">
                <h2>Paquetes enviados (esperando pago)</h2>
                <table class="table table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Nombre</th>
                            <th>Celular</th>
                            <th>Email</th>
                            <th>Valor</th>
                            <th>Acción</th>
                        </tr>
                    </thead>
                    <tbody id="comandasVerificadas"></tbody>
                </table>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-12">
                <h2>Paquetes enviados pagadas</h2>
                <table class="table table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Nombre</th>
                            <th>Celular</th>
                            <th>Email</th>
                            <th>Valor</th>
                            <th>Acción</th>
                        </tr>
                    </thead>
                    <tbody id="comandasPagadas"></tbody>
                </table>
            </div>
        </div>

        </div>
    </div>


@section Scripts {
    <script src="~/Scripts/TraigoJs/Admin/comanda.js?1"></script>
}
